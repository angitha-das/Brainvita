<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.angitha.mygame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_s"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_r"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GameMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".activity.GamePlayActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.LevelsRecyclerActivity"/>
    </application>

</manifest>